@model IEnumerable<EMSWebApp.Models.DepartmentEmployeeCount>
@{
    ViewData["Title"] = "DeparmentsData";
}

<h1>Deparments Data</h1>

<table class="table table-striped">
    <thead>
        <tr>

            <th>Name</th>
            <th>Employee Count</th>
            <th>Actions</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.DepartmentName</td>
                <td>@i.EmployeeCount</td>
                
                <td>
                    <button class="btn btn btn-success"><a style="color : white" href="/Department/GetDepartmentById/@i.Id">Edit</a></button>

                
                    <button class="btn btn btn-danger"><a style="color : white" href="/Department/DeleteDepartment/@i.Id">Delete</a></button>

                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Employee Count</th>
            <th>Actions</th>
            
        </tr>
    </tfoot>
</table>






