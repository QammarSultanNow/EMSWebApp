@model IEnumerable<ApplicationCore.Models.DepartmentEmployeeCount>
@{
    ViewData["Title"] = "DeparmentsData";
}

<h1>Deparments Data</h1>
@await Component.InvokeAsync("Employee");
<table class="table table-striped">
    <thead>
        <tr>

            <th>Name</th>
            <th>Employee Count</th>
            <th>Employee Detail</th>
            <th>Actions</th>
          
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <h2>No Recoreds are founds</h2>
        }
        else
        {
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.DepartmentName</td>
                    <td>@i.EmployeeCount</td>
                    <td><button class="btn btn btn-info"><a style="color : white" href="/Account/GetAllEmployees/@i.Id">Emplopyee Detail</a></button></td>

                    <td>
                        <button class="btn btn btn-success"><a style="color : white" href="/Department/GetDepartmentById/@i.Id">Edit</a></button>
                        <button class="btn btn btn-danger"><a style="color : white" href="/Department/DeleteDepartment/@i.Id">Delete</a></button>

                    </td>
                </tr>
            }
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Employee Count</th>
            <th>Employee Detail</th>
            <th>Actions</th>
            
        </tr>
    </tfoot>
</table>






